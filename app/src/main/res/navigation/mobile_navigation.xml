<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.android.gamesredo.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_teamDetail"
            app:destination="@id/teamDetail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>



    <fragment
        android:id="@+id/navigation_dashboard_today"
        android:name="com.example.android.gamesredo.ui.today.TodayFragment"
        android:label="@string/today_s_games"
        tools:layout="@layout/fragment_today" >
        <action
            android:id="@+id/action_navigation_dashboard_to_gameDetail"
            app:destination="@id/gameDetail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_navigation_dashboard_today_to_allTeamsInHistoryFragment"
            app:destination="@id/allTeamsInHistoryFragment" />

    </fragment>

    <fragment
        android:id="@+id/gameDetail"
        android:name="com.example.android.gamesredo.ui.gamedetail.GameDetailFragment"
        android:label="@string/gameDetail"
        tools:layout="@layout/fragment_game_detail" >
        <argument
            android:name="gamesPkModelArgs"
            app:argType="com.example.android.gamesredo.domain.GamesModel"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.android.gamesredo.ui.leaders.LeadersFragment"
        android:label="@string/leaders"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/teamDetail"
        android:name="com.example.android.gamesredo.ui.teamdetail.TeamDetailFragment"
        android:label="@string/teamDetail"
        tools:layout="@layout/fragment_team_detail" >
        <argument
            android:name="teamRecordsArgs"
            app:argType="com.example.android.gamesredo.domain.StandingsModel" />
        <action
            android:id="@+id/action_teamDetail_to_personDetailFragment"
            app:destination="@id/personDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <fragment
        android:id="@+id/personDetailFragment"
        android:name="com.example.android.gamesredo.ui.persondetail.PersonDetailFragment"
        android:label="@string/playerDetail"
        tools:layout="@layout/fragment_person_detail" >
        <argument
            android:name="personArg"
            app:argType="com.example.android.gamesredo.Person" />
        <argument
            android:name="teamArgs"
            app:argType="com.example.android.gamesredo.Team"
            app:nullable="true" />
        <action
            android:id="@+id/action_personDetailFragment_to_teamHistoryFragment"
            app:destination="@id/teamHistoryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/teamHistoryFragment"
        android:name="com.example.android.gamesredo.ui.teamhistory.TeamHistoryFragment"
        android:label="@string/teamInfo"
        tools:layout="@layout/fragment_team_history" >
        <argument
            android:name="teamHistArgs"
            app:argType="com.example.android.gamesredo.Team" />
    </fragment>
    <fragment
        android:id="@+id/allTeamsInHistoryFragment"
        android:name="com.example.android.gamesredo.ui.allteamsinhistory.AllTeamsInHistoryFragment"
        android:label="fragment_all_teams_in_history"
        tools:layout="@layout/fragment_all_teams_in_history" />
</navigation>